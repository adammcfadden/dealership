<h1>Here is a list of vehicles:</h1>
<ul>
  <% @vehicles.each() do |vehicle| %>
  <li><a href="/vehicle/<%= vehicle.id() %>"><%=vehicle.year() %> <%=vehicle.make() %> <%=vehicle.model() %></a></li>
  <% end %>
</ul>
<br>
<br>
<form action="/clear_list/<%= @id %>" method="post">
  <button id="clear_list" name="clear_list" class="btn-danger btn">Clear your vehicle list</button>
</form>
